generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id             String   @id @default(cuid())
  linuxdoId      Int      @unique
  username       String
  name           String?
  avatarTemplate String?
  trustLevel     Int      @default(0)
  role           Role     @default(USER)
  isBanned       Boolean  @default(false)
  banReason      String?
  cchUserId      Int?
  cchApiKey      String? // AES-256-GCM 加密存储
  cchKeyId       Int?
  lastActivityAt DateTime?
  lastKnownUsage Int      @default(0)
  keyAutoDisabled Boolean @default(false)
  autoDisabledAt DateTime?
  lastLoginAt    DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model SystemState {
  id                     Int      @id
  inactivityHours        Int      @default(5)
  dailyReactivateHourBjt Int      @default(8)
  dailyReactivateMinuteBjt Int    @default(0)
  lastDailyReactivateAt  DateTime?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}
